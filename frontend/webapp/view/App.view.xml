<mvc:View
  controllerName="hedgecontrol.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:f="sap.f"
  displayBlock="true">
  <tnt:ToolPage id="toolPage" sideExpanded="true">
    <tnt:header>
      <f:ShellBar
        id="appShellBar"
        title="{i18n>headerTitle}"
        showMenuButton="true"
        showNotifications="false"
        showProductSwitcher="false"
        menuButtonPressed=".onMenuButtonPressed">
        <f:additionalContent>
          <Button text="{i18n>headerBadge}" type="Transparent" enabled="false" class="appHeaderBadge">
            <layoutData>
              <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
          </Button>
        </f:additionalContent>
      </f:ShellBar>
    </tnt:header>
    <tnt:sideContent>
      <tnt:SideNavigation id="sideNavigation" selectedKey="{appModel>/selectedKey}" itemSelect=".onNavigationItemSelect">
        <tnt:NavigationList>
          <tnt:NavigationListItem key="home" text="{i18n>navOverview}" icon="sap-icon://home" />
          <tnt:NavigationListItem key="observability" text="{i18n>navObservability}" icon="sap-icon://activities" />
          <tnt:NavigationListItem key="audit" text="{i18n>navAudit}" icon="sap-icon://activity-items" />
          <tnt:NavigationListItem key="exposures" text="{i18n>navExposures}" icon="sap-icon://product" />
          <tnt:NavigationListItem key="orders" text="{i18n>navOrders}" icon="sap-icon://sales-order" />
          <tnt:NavigationListItem key="rfq" text="{i18n>navRfq}" icon="sap-icon://request" />
          <tnt:NavigationListItem key="contracts" text="{i18n>navContracts}" icon="sap-icon://document" />
          <tnt:NavigationListItem key="cashflow" text="{i18n>navCashflow}" icon="sap-icon://money-bills" />
          <tnt:NavigationListItem key="pnl" text="{i18n>navPnl}" icon="sap-icon://line-chart" />
          <tnt:NavigationListItem key="scenario" text="{i18n>navScenario}" icon="sap-icon://simulate" />
          <tnt:NavigationListItem key="mtm" text="{i18n>navMtm}" icon="sap-icon://business-objects-experience" />
          <tnt:NavigationListItem key="marketData" text="{i18n>navMarketData}" icon="sap-icon://database" />
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>
    <tnt:mainContents>
      <App id="app" />
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>